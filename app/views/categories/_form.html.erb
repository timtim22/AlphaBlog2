<%= render 'share/errors', obj: @category %>
      
        <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group">
             <div class="col-sm-2 control-label">
            <%= f.label :name %>
             </div>
            
            <div class= "col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Category Name", autofocus: true %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: "btn btn-default" %>
            </div>
          </div>
        <% end %>
        
        <div class="col-xs-offset-4">
        [<%= link_to "Cancel Request and Back to All Articles", articles_path %>]
        </div>