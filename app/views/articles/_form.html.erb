<% if @article.errors.any? %>


   <h2> The following errors prevent the artcile from created</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
      <% end %>
    </ul>
  <% end %>
<form class="form-horizontal">
  <div class = "row">
    <div class = "col-xs-offset-1">
        <%= form_for @article do |f| %>
          <div class="form-group">
             <div class="col-sm-2 control-label">
            <%= f.label :title %>
             </div>
            
            <div class= "col-sm-6">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-2 control-label">
            <%= f.label :description %>
            </div>
            
            <div class= "col-sm-6">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of Article", autofocus: true %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: "btn btn-default" %>
            </div>
          </div>
        
        
        <% end %>
        
        <div class="col-xs-offset-4">
        [<%= link_to "Cancel Request and Back to All Articles", articles_path %>]
        </div>
        
    </div>
  </div>
</form>